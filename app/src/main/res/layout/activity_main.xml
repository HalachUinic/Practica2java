<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp">


        <TextView
            android:id="@+id/lbldatos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ingrese sus datos"
            android:textAlignment="center"
            android:textSize="12pt"
            android:layout_marginBottom="20dp">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblpeso"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Peso:"
                android:textAlignment="center"
                android:textSize="12pt">

            </TextView>

            <EditText
                android:id="@+id/txtpeso"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:hint="solo kg"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="10pt">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblaltura"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Altura:"
                android:textAlignment="center"
                android:textSize="11pt">

            </TextView>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtaltura"
                android:layout_weight="1"
                android:hint=" solo cm"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:textSize="12pt"
                android:layout_marginTop="20dp">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/lblimc"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:text="IMC:"
                android:textAlignment="center"
                android:textSize="11pt"
                android:layout_marginBottom="70dp"/>

            <EditText
                android:id="@+id/txtimc"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:enabled="false"
                android:hint="I M C"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="15dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnCalcular"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="92dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="55dp"
                android:text="Calcular I M C"
                android:visibility="visible"></Button>

            <Button
                android:id="@+id/btnBorrar"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="92dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="55dp"
                android:text="Borrar datos"
                android:visibility="visible"></Button>


        </LinearLayout>

        <Button
            android:id="@+id/btnCerrar"
            style="@style/Widget.AppCompat.Button"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Cerrar">
        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>